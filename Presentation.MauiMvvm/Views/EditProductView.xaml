<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             
             xmlns:models="clr-namespace:Business.Models;assembly=Business"
             xmlns:viewmodels="clr-namespace:Presentation.MauiMvvm.ViewModels"
             x:DataType="{x:Type viewmodels:EditProductViewModel}"
             
             x:Class="Presentation.MauiMvvm.Views.EditProductView"
             Shell.NavBarIsVisible="False"
             Title="EditProductView">

    <ScrollView>
        <Grid BackgroundColor="White">
            <Label Text="Edit Service" FontSize="28" FontAttributes="Bold" />
            
            <VerticalStackLayout>
                <Label Text="Service name: " />
                <Entry Placeholder="New service name" Text="{Binding ProductUpdateDto.ProductName, Mode=TwoWay}" />

                <Label Text="Last name: " />
                <Entry Placeholder="New price" Text="{Binding ProductUpdateDto.Price, Mode=TwoWay}" />

                <Label Text="Email address: " />
                <Entry Placeholder="New currency" Text="{Binding ProductUpdateDto.Currency, Mode=TwoWay}" />

                <Button Text="Save" CommandParameter="{Binding ProductUpdateDto}" Command="{Binding Path=UpdateProductCommand}" />
            </VerticalStackLayout>
        </Grid>
    </ScrollView>
</ContentPage>