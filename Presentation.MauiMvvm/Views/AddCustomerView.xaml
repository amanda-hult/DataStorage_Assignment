<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             
             xmlns:viewmodels="clr-namespace:Presentation.MauiMvvm.ViewModels"
             x:DataType="{x:Type viewmodels:AddCustomerViewModel}"
             
             x:Class="Presentation.MauiMvvm.Views.AddCustomerView"
             Title="AddCustomerView">
    
    <VerticalStackLayout>
        <Label Text="Add Customer" VerticalOptions="Center" HorizontalOptions="Center" />

        <Label Text="Customer name:" />
        <Entry Text="{Binding CustomerCreateDto.CustomerName}" />

        <Button Text="Add Customer" Command="{Binding AddCustomerCommand}" />

    </VerticalStackLayout>
</ContentPage>