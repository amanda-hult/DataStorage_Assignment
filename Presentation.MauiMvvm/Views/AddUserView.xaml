<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             
             xmlns:viewmodels="clr-namespace:Presentation.MauiMvvm.ViewModels"
             x:DataType="{x:Type viewmodels:AddUserViewModel}"
             
             x:Class="Presentation.MauiMvvm.Views.AddUserView"
             Title="AddUserView">
    
    <VerticalStackLayout>
        <Label Text="Add User" VerticalOptions="Center" HorizontalOptions="Center" />

        <Label Text="First name:" />
        <Entry Text="{Binding UserCreateDto.FirstName}" />

        <Label Text="Last name:" />
        <Entry Text="{Binding UserCreateDto.LastName}" />

        <Label Text="Email:" />
        <Entry Text="{Binding UserCreateDto.Email}" />

        <Button Text="Add User" Command="{Binding AddUserCommand}" />

    </VerticalStackLayout>
</ContentPage>