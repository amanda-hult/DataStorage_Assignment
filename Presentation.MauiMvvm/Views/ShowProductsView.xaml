<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             
             xmlns:models="clr-namespace:Business.Models;assembly=Business"
             xmlns:viewmodels="clr-namespace:Presentation.MauiMvvm.ViewModels"
             x:DataType="{x:Type viewmodels:ShowProductsViewModel}"
             
             x:Class="Presentation.MauiMvvm.Views.ShowProductsView"
             Shell.NavBarIsVisible="False"
             x:Name="Page"
             Title="ShowProductsView">

    <ScrollView>
        <Grid RowDefinitions="auto, *" Padding="10" BackgroundColor="White">

            <Label Text="All Services" FontSize="28" FontAttributes="Bold" />

            <VerticalStackLayout>
                <Grid ColumnDefinitions="0.5*, 2*, 1*, 1*, 1*" Padding="10,5" ColumnSpacing="20" BackgroundColor="LightGray">
                    <Label Text="Id" FontAttributes="Bold" VerticalOptions="Center" TextColor="Black"/>
                    <Label Text="Service" FontAttributes="Bold" VerticalOptions="Center" TextColor="Black" Grid.Column="1" />
                    <Label Text="Price/hour" FontAttributes="Bold" VerticalOptions="Center" TextColor="Black" Grid.Column="2"/>
                    <Label Text="Currency" FontAttributes="Bold" VerticalOptions="Center" TextColor="Black" Grid.Column="3" />
                    <Label Text="Actions" FontAttributes="Bold" VerticalOptions="Center" TextColor="Black" Grid.Column="4" />
                </Grid>
                <CollectionView ItemsSource="{Binding ProductList}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="models:ProductModel">
                            <Border BackgroundColor="WhiteSmoke"
                                    Stroke="LightGray"
                                    StrokeThickness="0.5"
                                    StrokeShape="RoundRectangle 3"
                                    Padding="1"
                                    Margin="2, 1">
                                <Grid ColumnDefinitions="0.5*, 2*, 1*, 1*, 1*" Padding="5">
                                    <Label Text="{Binding ProductId}" Grid.Column="0" TextColor="Black" VerticalOptions="Center" />
                                    <Label Text="{Binding ProductName}" Grid.Column="1" TextColor="Black" VerticalOptions="Center"/>
                                    <Label Text="{Binding Price}" Grid.Column="2" TextColor="Black" VerticalOptions="Center" />
                                    <Label Text="{Binding Currency}" Grid.Column="3" TextColor="Black" VerticalOptions="Center" />

                                    <HorizontalStackLayout Grid.Column="4">
                                        <Button Text="Edit" CommandParameter="{Binding .}" Command="{Binding Path=NavigateToEditProductCommand, Source={RelativeSource AncestorType={x:Type viewmodels:ShowProductsViewModel}}}" />
                                        <Button Text="Delete" CommandParameter="{Binding .}" Command="{Binding Path=DeleteProductCommand, Source={RelativeSource AncestorType={x:Type viewmodels:ShowProductsViewModel}}}" />
                                    </HorizontalStackLayout>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </Grid>
    </ScrollView>
</ContentPage>