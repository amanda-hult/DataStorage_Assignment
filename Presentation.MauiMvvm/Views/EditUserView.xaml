<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             
             xmlns:models="clr-namespace:Business.Models;assembly=Business"
             xmlns:viewmodels="clr-namespace:Presentation.MauiMvvm.ViewModels"
             x:DataType="{x:Type viewmodels:EditUserViewModel}"
             
             x:Class="Presentation.MauiMvvm.Views.EditUserView"
             Shell.NavBarIsVisible="False"
             Title="EditUserView">


    <ScrollView>
        <Grid BackgroundColor="White">
            <Label Text="Edit User" FontSize="28" FontAttributes="Bold" />

            <VerticalStackLayout>
                <Label Text="First name: " />
                <Entry Placeholder="New first name" Text="{Binding UserUpdateDto.FirstName, Mode=TwoWay}" />

                <Label Text="Last name: " />
                <Entry Placeholder="New last name" Text="{Binding UserUpdateDto.LastName, Mode=TwoWay}" />

                <Label Text="Email address: " />
                <Entry Placeholder="New email address" Text="{Binding UserUpdateDto.Email, Mode=TwoWay}" />

                <Button Text="Save" CommandParameter="{Binding UserUpdateDto}" Command="{Binding Path=UpdateUserCommand}" />
            </VerticalStackLayout>
        </Grid>
    </ScrollView>
</ContentPage>